/* pages/my-course-detail/inde.wxss */
.top-area {
  padding: 30rpx 33rpx 51rpx 33rpx;
  background-color: #191933;
  color: #cccccc;
  background-repeat: no-repeat;
  background-size: cover;
}
.top-line {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.top-line .img-wrap {
  flex: 0 0 80rpx;
  width: 80rpx;
  height: 80rpx;
}
.top-line .img-wrap image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content-wrap {
  flex: 1;
  margin-left: 15rpx;
}
.content-wrap .title {
  margin-bottom: 12rpx;
}
.content-wrap .title text {
  font-size: 18px;
  color: #fff;
  font-weight: 700;
}
.top-info .info-item {
  margin-bottom: 18rpx;
}
.top-info .info-item .label {
  margin-right: 12rpx;
}
.center-area {
  display: flex;
  color: #333;
}

.center-area .item {
  padding: 36rpx 0 35rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.center-area .item .label text {
  font-size: 14px;
}
.center-area .item .number {
  margin-top: 18rpx;
}
.center-area .item .number text {
  font-size: 18px;
}

.bottom-area .head {
  padding: 29rpx 32rpx;
  display: flex;
  justify-content: space-between;
  color: #808080;
  background-color: #f2f4f7;
}

.list-block {
  color: #333;
}
.list-block .each-line {
  position: relative;
  padding: 37rpx 32rpx;
  display: flex;
  justify-content: space-between;
}

.list-block .each-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #ddd;
  border-bottom-width: 1px;
  right: 0;
}

.list-block .each-line.last::after {
  border-bottom-width: 0;
}


.tab-left{
  display: flex;
 flex-direction: row;
}
.tab-left view{
    width: 50%;
    text-align: center;
     padding:36rpx 0 35rpx 0;
     font-size: 14px;
      position: relative;
}

.tab-left .active::after{
  content: '';               
  position: absolute;       
  bottom: 0;
  left:50%;
  margin-left: -50rpx;
  background: #5C5BE3;    
  width: 100rpx;
  height: 2px;
}

.tab-left .active{
 color: #5C5BE3;
}
.tab-right{
 line-height: 160%;
}
.tab-right .right-item{
 display: none;
}
.tab-right .right-item.active{
 display: block;
}
.each-line-arrow{
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 20rpx;
}
.icon-arrow image {
  width: 10rpx;
  height: 17rpx;
}




