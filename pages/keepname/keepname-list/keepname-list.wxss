  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 10rpx 0 10rpx #f1f3f6;
}

.qiandao-btn {
  border-radius: 4px;
  background-color: #5b5be3;
  color: #fff;
  border: none;
  width: 93%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 auto;
  font-size: 18px;
  font-weight: bold
}

.dm-people {
  font-size: 12px;
  color: #808080;
  padding-bottom: 18rpx;
  display: block;
}


