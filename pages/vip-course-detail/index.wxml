      </view>
      <view class='content'>
        <view class='name no-padding-text'>
          <text class='name-text'>小宝子</text>
          <text style='padding:0 15rpx;'>男</text>
          <text>10岁</text>
        </view>
        <view class='desc no-padding-text'>
          <text>138000138000</text>
