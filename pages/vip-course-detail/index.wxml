<view class='my-course-detail'>
  <view class='top-area'>
    <view class='top-line'>
      <view class='img-wrap'>
        <image src='http://tm.xyyzi.com:9099/oa/upload/head/1526527828992.png'></image>
      </view>
      <view class='content-wrap'>
        <view class='title no-padding-text'>
          <text>街舞幼儿02班</text>
        </view>
