/* pages/home/index.wxss */
.home-page {
  padding: 32rpx;
}
.swiper-wrap {
  position: relative;
  width: 100%;
  padding-top: 25.7%;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0px 5px 6px 0 rgba(0, 0, 0, 0.1);
}
.fs-swiper-dot {
  margin-top: 11rpx;
  font-size: 0;
  text-align: center;
}
.fs-swiper-dot .dot {
  margin: 0 4rpx;
  display: inline-block;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: #ddd;
}
.fs-swiper-dot .dot.active {
  background-color: #333;
}
.fs-swiper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
   border-radius: 10px;
  overflow: hidden;
}
.banner-img-wrap {
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.each-block {
  margin-top: 20rpx;
}

.each-block .title {
  color: #333;
  font-size: 20px;
  font-weight: 700;
}




.commont-star .icon {
  margin-left: 6rpx;
  width: 14px;
  height: 14px;
}

/* pages/my/course.wxss */
.my-course {
  padding: 20rpx 0rpx;
}
.class-item {
  margin-bottom: 19rpx;
  padding: 45rpx 32rpx 44rpx 22rpx;
  background-color: #191933;
  border-radius: 20rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.inner{flex-grow: 1}
.class-list .title-area {
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.class-list .class-icon {
  width: 20px;
  height: 20px;
}

.class-list .class-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.class-list .class-title {
  margin-left: 15rpx;
}

.class-list .class-title text {
  color: #fff;
  font-size: 18px;
  font-weight: 700;
}

.class-list .my-tag {
  margin-left: 14rpx;
  padding: 7rpx 12rpx;
  border: 2rpx solid #00FFFF;
  border-radius: 4rpx;
}
.class-list .my-tag text {
  color: #00FFFF;
}

.class-list .content-area {
  color: #C2C6CC;
}
.class-list .content-area text {
  line-height: 18px;
}

.class-list .content-area .label {
  margin-right: 12rpx;
}




.intro-font {
  font-size: 28rpx;
  color: #0ff;
  margin-top: 20rpx;
}

.y1 {
  position: relative;
  z-index: 1000;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  border-radius: 50%;
  box-shadow: 10rpx 10rpx 90rpx #5975ff;
  background-size: 100%;
  background-repeat: no-repeat;
}
.y1.y3 {
box-shadow:5rpx 5rpx 30rpx #29cc96;
}
