/* pages/course-list/index.wxss */
page {
  background-color: #f2f4f7;
}

.top-area {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 32rpx;
  background-color: #fff;
}
.top-area .title text {
  font-size: 15px;
  color: #333;
}

.icon-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 20rpx 20rpx;
}
.icon-arrow image {
  width: 10rpx;
  height: 17rpx;
}
.class-list .title-area {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.class-list .class-icon {
  width: 20px;
  height: 20px;
}

.class-list .class-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.class-list .class-title {
  margin-left: 15rpx;
}

.class-list .class-title text {
  color: #333;
  font-size: 18px;
  font-weight: 700;
}

.class-list .my-tag {
  margin-left: 14rpx;
  padding: 7rpx 12rpx;
  border: 2rpx solid #5B5BE3;
  border-radius: 4rpx;
}
.class-list .my-tag text {
  color: #5B5BE3;
}

.class-list .content-area {
  padding-left: 55rpx;
  color: #808080;
}
.class-list .content-area text {
  line-height: 18px;
}

.class-list .content-area .label {
  margin-right: 12rpx;
}
.class-list .content-area .phone {
  margin-left: 12rpx;
}
.class-list .course-item {
  margin-bottom: 10rpx;
  padding: 34rpx 32rpx;
  background-color: #fff;
}