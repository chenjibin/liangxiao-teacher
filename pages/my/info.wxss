/* pages/my/info.wxss */

page {
  background-color: #f2f4f7;
}

.top-area {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
}

.avator-title {
  flex: 1;
  color: #333;
}

.avator-title text {
  font-size: 15px;
}

.avator {
  margin-right: 22rpx;
  flex: 0 0 55px;
  width: 55px;
  height: 55px;
}

.avator image {
  width: 100%;
  height: 55px;
  border-radius: 50%;
}
.right-icon-wrap {
  font-size: 0;
}
.right-icon-wrap image {
  width: 10rpx;
  height: 17rpx;
}

.fs-cell-group {
  margin-bottom: 20rpx;
  padding: 0 33rpx;
  background-color: #fff;
}

.fs-cell-group .fs-cell {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}

.fs-cell-group .fs-cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e6e6e6;
  border-bottom-width: 1px;
  right: 0;
}

.fs-cell-group .fs-cell.no-border::after {
  display: none;
}

.fs-cell-group .fs-cell .label {
  flex: 0 0 80px;
  width: 80px;
}

.fs-cell-group .fs-cell .label text {
  font-size: 15px;
  color: #333;
}
.fs-cell-group .fs-cell .content {
  flex: 1;
}
.fs-cell-group .fs-cell .content text {
  font-size: 15px;
  color: #333;
}


.fs-cell-group .fs-cell .content .region-text {
  margin-right: 12rpx;
}

.cell-input {
  display: flex;
  align-items: center;
  font-size: 15px;
  color: #333;
}
.cell-input-hold {
  color: #B3B3B3;
}