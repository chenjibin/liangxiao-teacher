
/* pages/my/course.wxss */
.my-course {
  padding: 20rpx 32rpx;
}
.class-item {
  margin-bottom: 19rpx;
  padding: 45rpx 22rpx 44rpx 22rpx;
  background-color: #191933;
  border-radius: 20rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.class-list .title-area {
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.class-list .class-icon {
  width: 20px;
  height: 20px;
}

.class-list .class-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.class-list .class-title {
  margin-left: 15rpx;
}

.class-list .class-title text {
  color: #fff;
  font-size: 18px;
  font-weight: 700;
}

.class-list .my-tag {
  margin-left: 14rpx;
  padding: 7rpx 12rpx;
  border: 2rpx solid #00FFFF;
  border-radius: 4rpx;
}
.class-list .my-tag text {
  color: #00FFFF;
}

.class-list .content-area {
  color: #C2C6CC;
}
.class-list .content-area text {
  line-height: 18px;
}
.class-list .content-area .phone {
  margin-left: 8rpx;

}
.class-list .content-area .label {
  margin-right: 12rpx;
}




