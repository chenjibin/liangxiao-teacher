page {
  background-color: #f2f4f7;
}
.top-area {
  padding: 30rpx 0 28rpx 0;
  background-color: #191933;
  text-align: center;
} 
.top-area .btn-wrap {
  position: relative;
  width: 80%;
  margin: 0 auto;
}
.top-area .btn-wrap .right-icon {
  position: absolute;
  right: 28rpx;
  top: 50%;
  transform: translate(0, -50%);
  z-index: 10;
  width: 5px;
  height: 9px;
  font-size: 0;
}
.top-area .btn-wrap .right-icon image {
  width: 100%;
  height: 100%;
}
.top-area .btn-wrap .inner-content {
  padding: 17rpx 0 15rpx 0;
  font-size: 0;
  border-radius: 31rpx;
  background-color: rgba(255,255,255,0.15);
   box-shadow: 0px 5px 6px 0 rgba(25, 25, 51, 0.1);
}
.top-area .btn-wrap .inner-content text {
  display: inline-block;
  line-height: 1;
  font-size: 15px;
  color: #fff;
}
.top-area .info-block {
  margin-top: 30rpx;
  display: flex;
  color: #fff;
}
.top-area .info-block .info-item {
  flex: 1;
}
.top-area .info-block .info-item .content {
  margin-top: 14rpx;
}
.top-area .info-block .info-item .content text {
  font-size: 20px;
}
.data-pcker-area {
  margin-bottom: 20rpx;
}
.bottom-area {
  padding: 32rpx;
  background-color: #fff;
}

