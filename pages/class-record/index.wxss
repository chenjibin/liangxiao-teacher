/* compoments/class-record/index.wxss */

.no-padding-text {
  font-size: 0;
}

.no-padding-text text {
  display: inline-block;
  line-height: 1;
  font-size: 12px;
}

.record-block .list-block {
  padding-left: 36rpx;
  margin-top: 12px;
}

.record-block .no-more {
  text-align: center;
}

.record-block .no-more text {
  font-size: 14px;
  color: #b3b3b3;
}

.time-line-block {
  position: relative;
}

.time-line-block::before {
  content: "";
  display: inline-block;
  position: absolute;
  left: -36rpx;
  top: 9rpx;
  z-index: 10;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
}

.time-line-block.one::before {
  background-color: #5b5be3;
}

.time-line-block.two::before {
  background-color: #407df9;
}

.time-line-block.three::before {
  background-color: #29cc96;
}

.time-line-block::after {
  content: "";
  display: inline-block;
  position: absolute;
  left: -28rpx;
  top: 10rpx;
  width: 2rpx;
  height: calc(100% + 32rpx);
  background-color: #e1e3e6;
  z-index: 9;
}

.time-line-block.last::after {
  display: none;
}

.time-line-block .icon-img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.time-line-block .class-name {
  font-size: 16px;
  font-weight: 700;
  color: #333;
}

.time-line-block .teacher-name {
  margin-top: 4rpx;
  font-size: 13px;
  color: #666;
}

.time-line-block .teacher-name .label {
  margin-right: 12rpx;
}

.time-line-block .time {
  margin-bottom: 20rpx;
  font-size: 12px;
  color: #808080;
}

.time-line-block .icon {
  font-size: 0;
}

.record-block .list-block .cell-line {
  position: relative;
  margin-bottom: 32rpx;
  padding: 30rpx 24rpx 28rpx 24rpx;
  background-color: #fff;
  font-size: 14px;
  box-shadow: 0px 5px 5px 0 rgba(65, 63, 202, 0.05);
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items:center;
  /* justify-content:space-between; */

}
.main-content{flex: 1;padding-left: 15rpx}

.record-block .list-block .cell-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 1px solid rgba(230, 230, 230, 1);
  right: 0;
}

.record-block .list-block .cell-line .time {
  font-size: 12px;
}

.record-block .list-block .cell-line .common {
  padding: 10rpx 34rpx;
  font-size: 13px;
  color: #5b5be3;
  border: 2rpx solid #5b5be3;
  border-radius: 4rpx;
}

.dance-cell {
  display: flex;
  align-items: center;
}

.dance-cell .icon-block {
  margin-right: 20rpx;
}

.dance-cell .main-block {
  flex: 1;

}