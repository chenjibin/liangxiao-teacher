/* pages/teacher-list/index.wxss */
page {
  background-color: #f2f4f7;
}
.teacher-list {
  background-color: #fff;
}

.each-cell {
  position: relative;
  padding: 30rpx 32rpx;
}
.each-cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0px solid #ddd;
  border-bottom-width: 1px;
  right: 0;
}
.each-cell.no-border::after {
  display: none;
}
.each-cell .inner {
  display: flex;
  align-items: center;
}
.avator {
  flex: 0 0 40px;
  width: 40px;
  height: 40px;
}
.avator image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.each-cell .content {
  margin-left: 12rpx;
  flex: 1;
}
.each-cell .content .name text{
  font-size: 15px;
  color: #333;
}
.each-cell .content .name {
  margin-bottom: 13rpx;
}
.each-cell .content .desc text {
  color: #808080
}
.icon-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 20rpx 20rpx;
}
.icon-arrow image {
  width: 10rpx;
  height: 17rpx;
}
